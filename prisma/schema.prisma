generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/db.sqlite"
}

model Guild {
  id                String              @id
  queue             Queue[]
  loop              Boolean             @default(false)
  queueIndex        Int                 @default(0)
  queueEmbedId      String?
  playerEmbedId     String?
  musicChannel      String?
  retainQueue       Boolean             @default(false)
  prefix            String              @default("!")
  AnimeNotification AnimeNotification[]
}

model Queue {
  id               Int    @id @default(autoincrement())
  guild            Guild  @relation(fields: [guildId], references: [id])
  guildId          String
  videoId          String
  title            String
  thumbnail        String
  author           String
  channelThumbnail String
}

model AnimeNotification {
  id        Int    @id @default(autoincrement())
  guild     Guild  @relation(fields: [guildId], references: [id])
  guildId   String
  channelId String
  animeId   Int
  animeDb   String
}
